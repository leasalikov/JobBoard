generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id       String     @id @default(auto()) @map("_id") @db.ObjectId
  username String
  phone    String
  status   String?
  email    String     @unique
  name     String?
  image    String?
  password String?
  employer Employers?
}

model Employers {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userId    String    @unique @db.ObjectId
  user      Users     @relation(fields: [userId], references: [id])
  companyId String    @db.ObjectId
  company   Companies @relation(fields: [companyId], references: [id])
  jobs      Jobs[]
}

model Jobs {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  employerId      String    @db.ObjectId
  employer        Employers @relation(fields: [employerId], references: [id])
  location        String?
  experienceLevel String
  salary          Int
  category        String
  type            String
  field           String?
  title           String
  requirements    String
  description     String
  status          String
}

model Companies {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  logo        String
  size        String
  links       String[]
  employers   Employers[]
}
