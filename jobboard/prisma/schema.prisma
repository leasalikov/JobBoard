generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  phone       String
  status      String?
  email       String        @unique
  name        String?
  image       String?
  password    String?
  type        String?
  employer    Employers?
  jobSearcher JobSearchers?
  candidacy   Candidacies[]
  OTP         String?
}

model JobSearchers {
  id              String            @id @default(auto()) @map("_id") @db.ObjectId
  userId          String            @unique @db.ObjectId
  user            Users             @relation(fields: [userId], references: [id])
  skils           String[]
  expertise       String[]
  resume          String[]
  experience      String
  Recommendations Recommendations[]
}

model Recommendations {
  id     String       @id @default(auto()) @map("_id") @db.ObjectId
  userId String       @db.ObjectId
  user   JobSearchers @relation(fields: [userId], references: [id])
  email  String
  phone  String
}

model Employers {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userId    String    @unique @db.ObjectId
  user      Users     @relation(fields: [userId], references: [id])
  companyId String    @db.ObjectId
  company   Companies @relation(fields: [companyId], references: [id])
  Jobs      Jobs[]
}

model Jobs {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  employerId      String        @db.ObjectId
  employer        Employers     @relation(fields: [employerId], references: [id])
  location        String?
  experienceLevel String
  salary          Int
  category        String
  type            String
  field           String?
  title           String
  requirements    String
  description     String
  status          String
  candidacies     Candidacies[]
}

model Companies {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String      @unique
  phone       String
  description String
  logo        String
  size        String
  links       String[]
  employers   Employers[]
}

model Candidacies {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  userId      String  @db.ObjectId
  user        Users   @relation(fields: [userId], references: [id])
  jobId       String  @db.ObjectId
  job         Jobs    @relation(fields: [jobId], references: [id])
  coverLetter String?
}

model Contacts {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  email   String
  name    String
  phone   String
  message String
}
