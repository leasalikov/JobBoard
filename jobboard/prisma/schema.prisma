generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  username String
  phone    String
  status   String?
  email    String  @unique
  name     String?
  image    String?
  password String?
}

model Jobs {
  jobId           String  @id @default(auto()) @map("_id") @db.ObjectId
  location        String?
  experienceLevel String
  salary          String
  category        String
  field           String?
  jobTitle        String
  requirements    String
  description     String
  status          String
}
